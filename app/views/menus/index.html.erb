<div class="container">
  <% if params[:query] %>
    <%= link_to  'Fiche de production Excel', menus_path(format: :xlsx), class: "btn btn-danger m-4 d-block mx-auto w-25"  %>
  <% else %>
    <h2 class="text-center bg-dark text-white m-4">Pour générer la fiche de production : définir une date de départ ci-dessous</h2>
  <% end %>
  <div class="mt-4 mb-4">
    <%= form_tag menus_path, method: :get do %>
      <%= date_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "date de départ"
    %>
      <%= submit_tag "Valider", class: "btn btn-primary d-block mx-auto w-25 m-2" %>
    <% end %>
  </div>
  <h1 class="mt-4 text-center">Tous les menus</h1>
  <%= link_to "Ajouter un menu", new_menu_path, class: "btn btn-dark d-block mx-auto m-2" %>
  <div class="d-flex flex-column">
    <div class="menus">
      <% @menus_future.where(name: 'menu 1').each do |menu| %>
        <div class="d-flex flex-column">
          <p>
            <%= menu.name %>
          </p>
          <p>
            <%= menu.date %>
            <%= link_to edit_menu_path(menu) do %>
              <i class="fas fa-edit"></i>
            <% end %>
            <%= link_to menu_path(menu), method: :delete do %>
              <i class="fas fa-trash-alt"></i>
            <% end %>
          </p>
          <ul class="p-0">
            <% menu.menu_items.order(:position).each do |item| %>
              <li class="d-flex flex-row">
                <span class="menu-table-75">
                  <%= item.name %>
                </span>
                <span class="menu-table-25">
                  <strong><%= item.quantity %></strong>
                </span>
              </li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>
    <div class="menus">
      <% @menus_future.where(name: 'menu 2').each do |menu| %>
        <div class="d-flex flex-column">
          <p>
            <%= menu.name %>
          </p>
          <p>
            <%= menu.date %>
            <%= link_to edit_menu_path(menu) do %>
              <i class="fas fa-edit"></i>
            <% end %>
            <%= link_to menu_path(menu), method: :delete do %>
              <i class="fas fa-trash-alt"></i>
            <% end %>
          </p>
          <ul class="p-0">
            <% menu.menu_items.order(:position).each do |item| %>
              <li class="d-flex flex-row">
                <span class="menu-table-75">
                  <%= item.name %>
                </span>
                <span class="menu-table-25">
                  <strong><%= item.quantity %></strong>
                </span>
              </li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>
  </div>
</div>
