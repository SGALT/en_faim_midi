<h1>Tous les menus</h1>
<% @menus_future.each do |menu| %>
  <p>
    <%= menu.name %> -- <%= menu.date %>
    <%= link_to edit_menu_path(menu) do %>
      <i class="fas fa-edit"></i>
    <% end %>
    <%= link_to menu_path(menu), method: :delete do %>
      <i class="fas fa-trash-alt"></i>
    <% end %>
  </p>
  <ul>
    <% menu.menu_items.each do |item| %>
      <li><%= item.category %> : <%= item.name %></li>
    <% end %>
  </ul>
<% end %>
<%= link_to "Ajouter un menu", new_menu_path, class: "btn btn-dark" %>
